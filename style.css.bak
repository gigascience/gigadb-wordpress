.searchform .input_focus{color:#333;font-size:20px;}
.tagMatches{width:452px;display:none;background:#fff;position:absolute;top:67px;left:21px;z-index:99;padding:1px;border:1px solid #ccc;border-top:0 none;}
._tag_suggestion{height:30px;line-height:30px;display:block;padding:0 17px;color:#666;}
.tag_hover{background:#EEE;cursor:pointer;color:#333;}

