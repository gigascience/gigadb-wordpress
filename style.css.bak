#header_sear .submit{width:55px;height:26px;background:url(imgs/search_btn.png) no-repeat;cursor:pointer;}
#main_wrapper{padding:20px 0;}
.home #main_wrapper{background:#C2D0F7 url(imgs/body_bg2.jpg) no-repeat top center;}
.single #main_wrapper,.archive #main_wrapper,.search #main_wrapper,.page #main_wrapper{background:#D1D1D1;}
